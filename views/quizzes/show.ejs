
<form method="get" action="/quizzes/<%= quiz.id %>/check">
	Pregunta: <%= quiz.question %> <br>
	<input type = "text" name="answer" value="<%= answer %>" placeholder= "Responda aquí"/>
	<input type = "submit" value="Comprobar">
</form>
